# Staging Environment Variables Template for HRMS Backend Deployment
# Copy this file to .env.staging and fill in the actual values
# NEVER commit .env.staging to git!

# === DJANGO CONFIGURATION ===
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-with-django

# === DOCKER CONFIGURATION ===
APP_PORT=8421

# === DATABASE CONFIGURATION ===
DB_ENGINE=django.db.backends.postgresql
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your-db-password-here
DB_HOST=db
DB_PORT=5432

# === DOMAIN AND SECURITY ===
ALLOWED_HOSTS=your-server-ip,localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
CSRF_TRUSTED_ORIGINS=http://your-server-ip,https://yourdomain.com,https://www.yourdomain.com

# === CORS CONFIGURATION ===
CORS_ALLOW_ALL_ORIGINS=False

# === EMAIL CONFIGURATION ===
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
EMAIL_HOST_USER=your-email@domain.com
EMAIL_HOST_PASSWORD=your-email-password-here
DEFAULT_FROM_EMAIL=your-email@domain.com

# === TIMEZONE CONFIGURATION ===
TIME_ZONE=UTC

# === STATIC AND MEDIA FILES ===
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/app/media

# === STAGING DEPLOYMENT SECRETS (for GitHub Actions) ===
STAGING_SSH_HOST=your-server-ip
STAGING_SSH_USERNAME=your-ssh-username
STAGING_SSH_PASSWORD=your-ssh-password
STAGING_SSH_PORT=22
STAGING_DEPLOY_PATH=/var/www/hrms-pbs-staging
STAGING_BACKUP_PATH=/var/www/hrms-pbs-staging-backups

# === MS TEAMS NOTIFICATIONS (Optional) ===
# Get from: Teams → Channel → Connectors → Incoming Webhook
STAGING_TEAMS_WEBHOOK_URL=https://your-teams-webhook-url

# === POSTHOG CONFIGURATION (Optional) ===
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_ENABLED=True

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_DIR=_logs
